{
    "manifest_version": "1.0",
    "driver_id": "smo_discord_communities_driver",
    "name": "Discord Communities",
    "type": "community_platform",
    "icon": "assets/icons/discord_communities.svg",
    "api_docs": "https://discord.com/developers/docs/resources/guild",

    "capabilities": {
        "text": true,
        "image": true,
        "video": true,
        "audio": true,
        "embed": true,
        "poll": true,
        "max_chars": 2000,
        "max_images": 10,
        "max_videos": 1,
        "allows_html": false,
        "best_image_ratio": "16:9"
    },

    "config_ui": [
        {
            "key": "discord_bot_token",
            "label": "Bot Token",
            "type": "password",
            "required": true,
            "encrypt": true,
            "help_text": "Your Discord bot token from Discord Developer Portal"
        },
        {
            "key": "discord_guild_id",
            "label": "Guild ID",
            "type": "text",
            "required": true,
            "help_text": "The Discord server (guild) ID where posts will be published"
        },
        {
            "key": "discord_channel_id",
            "label": "Channel ID",
            "type": "text",
            "required": true,
            "help_text": "The specific channel ID within the guild for posting"
        },
        {
            "key": "discord_webhook_url",
            "label": "Webhook URL",
            "type": "text",
            "required": false,
            "help_text": "Optional webhook URL for posting (alternative to bot token)"
        }
    ],

    "validation_rules": {
        "warnings": [
            {
                "condition": "content_length > 2000",
                "message": "Discord messages are limited to 2,000 characters per message."
            },
            {
                "condition": "image_count > 10",
                "message": "Discord supports up to 10 attachments per message."
            },
            {
                "condition": "video_size > 8",
                "message": "Videos larger than 8MB require Nitro or server boosting. Consider smaller files."
            }
        ]
    },

    "api_interaction": {
        "auth_method": "bot_token",
        "post_endpoint": {
            "url": "https://discord.com/api/v10/channels/{{config.discord_channel_id}}/messages",
            "method": "POST",
            "headers": {
                "Authorization": "Bot {{config.discord_bot_token}}",
                "Content-Type": "multipart/form-data"
            }
        },

        "payload_map": {
            "content": "{{post_content}} {{post_hashtags}}",
            "embeds": {
                "if": "{{post_url}}",
                "structure": [
                    {
                        "title": "{{post_title}}",
                        "description": "{{post_excerpt}}",
                        "url": "{{post_url}}",
                        "color": 3447003
                    }
                ]
            },
            "files": {
                "if": "{{has_attachments}}",
                "structure": "{{mapped_discord_attachments}}"
            }
        }
    },

    "optimal_posting_times": ["09:00", "12:00", "15:00", "18:00", "20:00", "22:00"],
    "engagement_factors": {
        "community_interaction": 2.0,
        "text_length": 0.3,
        "media": 1.5,
        "time_of_day": 0.9,
        "day_of_week": 0.8
    },
    "notes": "Community-focused platform with strong engagement for niche audiences and interest-based groups"
}
