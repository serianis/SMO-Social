{
    "manifest_version": "1.0",
    "driver_id": "smo_line_driver",
    "name": "Line",
    "type": "messaging_platform",
    "icon": "assets/icons/line.svg",
    "api_docs": "https://developers.line.biz/en/docs/messaging-api/overview/",

    "capabilities": {
        "text": true,
        "image": true,
        "video": true,
        "audio": true,
        "sticker": true,
        "max_chars": 5000,
        "max_images": 1,
        "max_videos": 1,
        "allows_html": false,
        "best_image_ratio": "1:1"
    },

    "config_ui": [
        {
            "key": "line_channel_access_token",
            "label": "Channel Access Token",
            "type": "password",
            "required": true,
            "encrypt": true,
            "help_text": "Your LINE Channel Access Token from LINE Developers"
        },
        {
            "key": "line_channel_secret",
            "label": "Channel Secret",
            "type": "password",
            "required": true,
            "encrypt": true,
            "help_text": "Your LINE Channel Secret (will be encrypted)"
        },
        {
            "key": "line_user_id",
            "label": "User ID",
            "type": "text",
            "required": true,
            "help_text": "The LINE User ID or Group ID where messages will be sent"
        }
    ],

    "validation_rules": {
        "warnings": [
            {
                "condition": "content_length > 5000",
                "message": "LINE messages are limited to 5,000 characters. Consider keeping messages concise."
            },
            {
                "condition": "image_count > 1",
                "message": "LINE supports only one media attachment per message."
            },
            {
                "condition": "video_size > 10",
                "message": "Videos larger than 10MB may fail to send. Consider compressing large videos."
            }
        ]
    },

    "api_interaction": {
        "auth_method": "bearer_token",
        "post_endpoint": {
            "url": "https://api.line.me/v2/bot/message/push",
            "method": "POST",
            "headers": {
                "Authorization": "Bearer {{config.line_channel_access_token}}",
                "Content-Type": "application/json"
            }
        },

        "payload_map": {
            "to": "{{config.line_user_id}}",
            "messages": [
                {
                    "type": "text",
                    "text": "{{post_content}} {{post_hashtags}}"
                }
            ]
        }
    },

    "optimal_posting_times": ["08:00", "12:00", "18:00", "21:00"],
    "engagement_factors": {
        "text_length": 0.3,
        "media": 1.3,
        "time_of_day": 0.8,
        "day_of_week": 0.6
    },
    "notes": "Popular messaging platform in Asia, especially Japan, Thailand, and Taiwan. Great for reaching Asian markets"
}
