{
    "manifest_version": "1.0",
    "driver_id": "smo_twitter_driver",
    "name": "Twitter/X",
    "type": "microblogging",
    "icon": "assets/icons/twitter.svg",
    "api_docs": "https://developer.twitter.com/en/docs/twitter-api",

    "capabilities": {
        "text": true,
        "image": true,
        "video": true,
        "link_preview": true,
        "max_chars": 280,
        "max_images": 4,
        "allows_html": false,
        "best_image_ratio": "16:9"
    },

    "config_ui": [
        {
            "key": "twitter_api_key",
            "label": "API Key",
            "type": "text",
            "required": true,
            "help_text": "Your Twitter API Key from developer.twitter.com"
        },
        {
            "key": "twitter_api_secret",
            "label": "API Secret",
            "type": "password",
            "required": true,
            "encrypt": true,
            "help_text": "Your Twitter API Secret (will be encrypted)"
        },
        {
            "key": "twitter_access_token",
            "label": "Access Token",
            "type": "text",
            "required": true
        },
        {
            "key": "twitter_access_token_secret",
            "label": "Access Token Secret",
            "type": "password",
            "required": true,
            "encrypt": true
        }
    ],

    "validation_rules": {
        "warnings": [
            {
                "condition": "content_length > 280",
                "message": "Content exceeds 280 character limit for Twitter. Will be truncated."
            },
            {
                "condition": "image_count > 4",
                "message": "Twitter supports maximum 4 images per tweet."
            },
            {
                "condition": "video_length > 140",
                "message": "Video tweets should be under 2 minutes 20 seconds for best engagement."
            }
        ]
    },

    "api_interaction": {
        "auth_method": "oauth_1.0",
        "auth_endpoint": {
            "url": "https://api.twitter.com/oauth/request_token",
            "method": "POST"
        },
        
        "post_endpoint": {
            "url": "https://api.twitter.com/2/tweets",
            "method": "POST",
            "headers": {
                "Authorization": "OAuth {{oauth_signature}}",
                "Content-Type": "application/json"
            }
        },

        "payload_map": {
            "text": "{{post_content}} {{post_hashtags}}",
            "media": {
                "if": "{{has_images}}",
                "structure": {
                    "media_ids": "{{mapped_media_ids}}"
                }
            }
        }
    },

    "optimal_posting_times": ["09:00", "12:00", "15:00", "18:00", "21:00"],
    "engagement_factors": {
        "text_length": 0.6,
        "hashtags": 0.4,
        "media": 1.3,
        "time_of_day": 0.7,
        "day_of_week": 0.5
    },
    "trending_hashtags_source": "https://api.twitter.com/2/trends/by/woeid/1",
    "notes": "Microblogging platform with real-time engagement and thread support"
}