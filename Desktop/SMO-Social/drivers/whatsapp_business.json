{
    "manifest_version": "1.0",
    "driver_id": "smo_whatsapp_business_driver",
    "name": "WhatsApp Business",
    "type": "messaging_platform",
    "icon": "assets/icons/whatsapp.svg",
    "api_docs": "https://developers.facebook.com/docs/whatsapp/api",

    "capabilities": {
        "text": true,
        "image": true,
        "video": true,
        "audio": true,
        "document": true,
        "location": true,
        "max_chars": 4096,
        "max_images": 1,
        "max_videos": 1,
        "allows_html": false,
        "best_image_ratio": "1:1"
    },

    "config_ui": [
        {
            "key": "whatsapp_phone_number_id",
            "label": "Phone Number ID",
            "type": "text",
            "required": true,
            "help_text": "Your WhatsApp Business phone number ID from Meta for Developers"
        },
        {
            "key": "whatsapp_access_token",
            "label": "Access Token",
            "type": "password",
            "required": true,
            "encrypt": true,
            "help_text": "Your permanent access token for WhatsApp Business API"
        },
        {
            "key": "whatsapp_business_account_id",
            "label": "Business Account ID",
            "type": "text",
            "required": true,
            "help_text": "Your WhatsApp Business Account ID"
        }
    ],

    "validation_rules": {
        "warnings": [
            {
                "condition": "content_length > 4096",
                "message": "WhatsApp messages are limited to 4,096 characters. Consider breaking long messages into multiple parts."
            },
            {
                "condition": "image_count > 1",
                "message": "WhatsApp supports only one media attachment per message."
            },
            {
                "condition": "video_size > 16",
                "message": "Videos larger than 16MB may fail to send. Consider compressing large videos."
            }
        ]
    },

    "api_interaction": {
        "auth_method": "bearer_token",
        "post_endpoint": {
            "url": "https://graph.facebook.com/v18.0/{{config.whatsapp_phone_number_id}}/messages",
            "method": "POST",
            "headers": {
                "Authorization": "Bearer {{config.whatsapp_access_token}}",
                "Content-Type": "application/json"
            }
        },

        "payload_map": {
            "messaging_product": "whatsapp",
            "to": "{{recipient_phone_number}}",
            "type": "text",
            "text": {
                "preview_url": false,
                "body": "{{post_content}} {{post_hashtags}}"
            }
        }
    },

    "optimal_posting_times": ["09:00", "12:00", "15:00", "18:00", "20:00"],
    "engagement_factors": {
        "text_length": 0.4,
        "media": 1.2,
        "time_of_day": 0.9,
        "day_of_week": 0.7
    },
    "notes": "Business communication platform with high engagement rates. Ideal for customer service and direct marketing"
}
