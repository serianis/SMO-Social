{
    "manifest_version": "1.0",
    "driver_id": "smo_facebook_groups_driver",
    "name": "Facebook Groups",
    "type": "community_groups",
    "icon": "assets/icons/facebook.svg",
    "api_docs": "https://developers.facebook.com/docs/graph-api/reference/v18.0/group",

    "capabilities": {
        "text": true,
        "image": true,
        "video": true,
        "link_preview": true,
        "max_chars": 63206,
        "max_images": 10,
        "allows_html": false,
        "best_image_ratio": "16:9"
    },

    "config_ui": [
        {
            "key": "facebook_groups_app_id",
            "label": "App ID",
            "type": "text",
            "required": true,
            "help_text": "Your Facebook App ID from Facebook Developers"
        },
        {
            "key": "facebook_groups_app_secret",
            "label": "App Secret",
            "type": "password",
            "required": true,
            "encrypt": true,
            "help_text": "Your Facebook App Secret (will be encrypted)"
        },
        {
            "key": "facebook_groups_access_token",
            "label": "Access Token",
            "type": "password",
            "required": true,
            "encrypt": true,
            "help_text": "Group access token with publish_to_groups permission"
        },
        {
            "key": "facebook_group_id",
            "label": "Group ID",
            "type": "text",
            "required": true,
            "help_text": "Facebook Group ID where posts will be published"
        }
    ],

    "validation_rules": {
        "warnings": [
            {
                "condition": "content_length > 63206",
                "message": "Facebook Groups support very long posts (63,206 characters), but keep them engaging."
            },
            {
                "condition": "image_count > 10",
                "message": "Facebook Groups allow up to 10 images per post for optimal engagement."
            },
            {
                "condition": "video_length > 1440",
                "message": "Facebook Group videos should be under 24 minutes for optimal performance."
            },
            {
                "condition": "is_promotional && !group_allows_promotion",
                "message": "Check group rules - most Facebook groups restrict promotional and sales content."
            }
        ]
    },

    "api_interaction": {
        "auth_method": "oauth_2.0",
        "auth_endpoint": {
            "url": "https://www.facebook.com/v18.0/dialog/oauth",
            "method": "GET",
            "payload": {
                "client_id": "{{config.facebook_groups_app_id}}",
                "redirect_uri": "{{config.facebook_groups_redirect_uri}}",
                "scope": "publish_to_groups,user_photos,user_videos",
                "state": "{{state}}"
            }
        },
        
        "post_endpoint": {
            "url": "https://graph.facebook.com/v18.0/{{config.facebook_group_id}}/feed",
            "method": "POST",
            "headers": {
                "Authorization": "Bearer {{config.facebook_groups_access_token}}",
                "Content-Type": "application/json"
            }
        },

        "payload_map": {
            "message": "{{post_content}} {{post_hashtags}}",
            "link": {
                "if": "{{post_url}}",
                "structure": "{{post_url}}"
            },
            "name": {
                "if": "{{post_title}}",
                "structure": "{{post_title}}"
            },
            "description": {
                "if": "{{post_excerpt}}",
                "structure": "{{post_excerpt}}"
            }
        }
    },

    "optimal_posting_times": ["09:00", "13:00", "19:00", "21:00"],
    "engagement_factors": {
        "text_length": 1.0,
        "hashtags": 0.5,
        "media": 1.6,
        "time_of_day": 1.2,
        "day_of_week": 1.1
    },
    "trending_hashtags_source": "https://www.facebook.com/hashtag/",
    "notes": "Community group discussions with member interaction, events, and marketplace features"
}