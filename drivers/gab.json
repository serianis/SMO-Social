{
    "manifest_version": "1.0",
    "driver_id": "smo_gab_driver",
    "name": "Gab",
    "type": "alternative_social",
    "icon": "assets/icons/gab.svg",
    "api_docs": "https://developers.gab.com/",

    "capabilities": {
        "text": true,
        "image": true,
        "video": true,
        "link_preview": true,
        "max_chars": 5000,
        "max_images": 4,
        "allows_html": false,
        "best_image_ratio": "16:9"
    },

    "config_ui": [
        {
            "key": "gab_client_id",
            "label": "Client ID",
            "type": "text",
            "required": true,
            "help_text": "Your Gab App Client ID from Gab for Developers"
        },
        {
            "key": "gab_client_secret",
            "label": "Client Secret",
            "type": "password",
            "required": true,
            "encrypt": true,
            "help_text": "Your Gab App Client Secret (will be encrypted)"
        },
        {
            "key": "gab_access_token",
            "label": "Access Token",
            "type": "password",
            "required": true,
            "encrypt": true,
            "help_text": "Gab OAuth access token with posting permissions"
        },
        {
            "key": "gab_account_id",
            "label": "Account ID",
            "type": "text",
            "required": true,
            "help_text": "Your Gab Account ID for posting"
        }
    ],

    "validation_rules": {
        "warnings": [
            {
                "condition": "content_length > 5000",
                "message": "Gab posts support up to 5,000 characters. Consider keeping concise for better engagement."
            },
            {
                "condition": "image_count > 4",
                "message": "Gab allows maximum 4 images per post."
            },
            {
                "condition": "video_length > 300",
                "message": "Gab videos should be under 5 minutes for optimal performance."
            },
            {
                "condition": "has_mature_content && !content_warned",
                "message": "Consider using content warnings for mature or sensitive material."
            }
        ]
    },

    "api_interaction": {
        "auth_method": "oauth_2.0",
        "auth_endpoint": {
            "url": "https://api.gab.com/oauth2/authorize",
            "method": "GET",
            "payload": {
                "response_type": "code",
                "client_id": "{{config.gab_client_id}}",
                "redirect_uri": "{{config.gab_redirect_uri}}",
                "scope": "read write follow",
                "state": "{{state}}"
            }
        },
        
        "post_endpoint": {
            "url": "https://api.gab.com/v1.3/statuses/",
            "method": "POST",
            "headers": {
                "Authorization": "Bearer {{config.gab_access_token}}",
                "Content-Type": "application/json"
            }
        },

        "payload_map": {
            "text": "{{post_content}} {{post_hashtags}}",
            "sensitive": {
                "if": "{{has_mature_content}}",
                "structure": true
            },
            "media_ids": {
                "if": "{{has_images}}",
                "structure": "{{mapped_media_ids}}"
            },
            "in_reply_to_id": {
                "if": "{{reply_to}}",
                "structure": "{{reply_to}}"
            }
        }
    },

    "optimal_posting_times": ["09:00", "12:00", "15:00", "18:00", "21:00"],
    "engagement_factors": {
        "text_length": 0.8,
        "hashtags": 0.5,
        "media": 1.2,
        "time_of_day": 0.9,
        "day_of_week": 0.8
    },
    "trending_hashtags_source": "https://gab.com/trending",
    "notes": "Alternative social network focused on free speech and decentralized community interaction"
}