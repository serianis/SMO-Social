{
    "manifest_version": "1.0",
    "driver_id": "smo_youtube_communities_driver",
    "name": "YouTube Communities",
    "type": "video_communities",
    "icon": "assets/icons/youtube.svg",
    "api_docs": "https://developers.google.com/youtube/v3",

    "capabilities": {
        "text": true,
        "image": true,
        "video": true,
        "link_preview": false,
        "max_chars": 500,
        "max_images": 1,
        "allows_html": false,
        "best_image_ratio": "16:9"
    },

    "config_ui": [
        {
            "key": "youtube_communities_client_id",
            "label": "Client ID",
            "type": "text",
            "required": true,
            "help_text": "Your YouTube API Client ID from Google Cloud Console"
        },
        {
            "key": "youtube_communities_client_secret",
            "label": "Client Secret",
            "type": "password",
            "required": true,
            "encrypt": true,
            "help_text": "Your YouTube API Client Secret (will be encrypted)"
        },
        {
            "key": "youtube_communities_access_token",
            "label": "Access Token",
            "type": "password",
            "required": true,
            "encrypt": true,
            "help_text": "OAuth 2.0 access token with youtube.force-ssl permission"
        },
        {
            "key": "youtube_channel_id",
            "label": "Channel ID",
            "type": "text",
            "required": true,
            "help_text": "Your YouTube Channel ID for community posting"
        }
    ],

    "validation_rules": {
        "warnings": [
            {
                "condition": "content_length > 500",
                "message": "YouTube Community posts support up to 500 characters. Keep it engaging and concise."
            },
            {
                "condition": "image_count > 1",
                "message": "YouTube Communities allow 1 image per post for polls and text updates."
            },
            {
                "condition": "video_length > 600",
                "message": "YouTube Community videos should be under 10 minutes for optimal engagement."
            },
            {
                "condition": "content_length < 50",
                "message": "Longer community posts (50+ characters) tend to generate better engagement."
            }
        ]
    },

    "api_interaction": {
        "auth_method": "oauth_2.0",
        "auth_endpoint": {
            "url": "https://accounts.google.com/o/oauth2/v2/auth",
            "method": "GET",
            "payload": {
                "response_type": "code",
                "client_id": "{{config.youtube_communities_client_id}}",
                "redirect_uri": "{{config.youtube_communities_redirect_uri}}",
                "scope": "https://www.googleapis.com/auth/youtube.force-ssl",
                "access_type": "offline",
                "state": "{{state}}"
            }
        },
        
        "post_endpoint": {
            "url": "https://www.googleapis.com/youtube/v3/communityPosts",
            "method": "POST",
            "headers": {
                "Authorization": "Bearer {{config.youtube_communities_access_token}}",
                "Content-Type": "application/json"
            }
        },

        "payload_map": {
            "snippet": {
                "channelId": "{{config.youtube_channel_id}}",
                "text": "{{post_content}} {{post_hashtags}}"
            },
            "status": {
                "privacyStatus": "public"
            }
        }
    },

    "optimal_posting_times": ["14:00", "18:00", "20:00", "22:00"],
    "engagement_factors": {
        "text_length": 0.8,
        "hashtags": 0.7,
        "media": 2.0,
        "time_of_day": 1.5,
        "day_of_week": 1.2
    },
    "trending_hashtags_source": "https://www.youtube.com/feed/trending",
    "notes": "Community tab posts for YouTube channels with polls, images, and community engagement"
}